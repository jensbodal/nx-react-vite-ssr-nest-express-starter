{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",

    "module": "ESNext",
    "target": "ESNext",
    // need to extend from https://github.com/tsconfig/bases and move dom to only where needed
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /////////////////////////////////////////
    // testing
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    /////////////////////////////////////////

    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "moduleResolution": "Bundler",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,

    "paths": {},
  },
  "exclude": ["node_modules", "tmp"]
}
